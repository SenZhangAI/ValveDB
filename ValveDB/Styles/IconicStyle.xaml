<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ValveDB">
  <Style x:Key="Icon-large">
    <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Icons/#FontAwesome" />
    <Setter Property="TextBlock.TextAlignment" Value="Center" />
    <Setter Property="TextBlock.FontSize" Value="32" />
    <Setter Property="TextBlock.Foreground" Value="#4F85BB" />
    <Setter Property="TextBlock.Padding" Value="3,0,3,0" />
  </Style>
</ResourceDictionary>